<% include partials/header %>

    <div class="wrapper">
      <div class="box box-1">
        <h1>Contact the Seller of this Domain</h1>
      </div>

      <div class="nested box box-4">
        
        <div style="text-align:center"><h3>Message Form</h3>
        

                      <div class="form">
                          <form class="pure-form pure-form-stacked" id="sub-form" method="POST" action="/contact" novalidate>
                            <fieldset> 
                                <legend>Use this form to inquire about purchasing this domain.</legend>
                                <div class="pure-g">
                                    <div class="pure-u-1 pure-u-md-1-2">
                                        <input type="text" class="pure-u-23-24" name="firstName" placeholder="First Name">
                                    </div>
                                    <div class="pure-u-1 pure-u-md-1-2">
                                        <input type="text" class="pure-u-23-24" name="lastName" placeholder="Last Name">
                                    </div>
                                    <div class="pure-u-1 pure-u-md-1-2">
                                        <input type="email" class="pure-u-23-24" name="emailAddress" placeholder="Email">
                                    </div>
                                    <div class="pure-u-1 pure-u-md-1-2">
                                        <input type="text" class="pure-u-23-24" name="phoneNumber" placeholder="Phone Number">
                                    </div>
                                    <div class="pure-u-1 pure-u-md-1-2">
                                        <textarea id="textarea" rows="4" class="pure-u-23-24" name="message" placeholder="your message here..."></textarea>
                                    </div>
                                    <!--<div class="form-group">
                                        <div class="g-recaptcha" 
                                        data-sitekey="6LdtwBMTAAAAAM0zUnjLDIafzJ-y3Sew20uo0IZ7"></div>
                                    </div>-->
                                    <input type="submit" class="pure-button pure-button-primary">
                                </form>
                                </fieldset>       
                                </div>
                                  
                      </div>

    </div>
  </body>
</html>
