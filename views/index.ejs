<% include partials/header %>

    <div class="wrapper">
      <div class="box box-1">
        <h1><%= title %>.com is available for purchase</h1>
      </div>

      <div class="nested box box-4">
          <form class="pure-form pure-form-stacked">
              <fieldset>
                  <legend><h1>Inquire about <%= title %>.com</h1></legend>
          
                  <div class="pure-g">
                      <div class="pure-u-1 pure-u-md-1-3">
                          <label for="first-name">First Name</label>
                          <input id="first-name" class="pure-u-23-24" type="text">
                      </div>
          
                      <div class="pure-u-1 pure-u-md-1-3">
                          <label for="last-name">Last Name</label>
                          <input id="last-name" class="pure-u-23-24" type="text">
                      </div>
          
                      <div class="pure-u-1 pure-u-md-1-3">
                          <label for="email">E-Mail</label>
                          <input id="email" class="pure-u-23-24" type="email" required>
                      </div>
          
                      <div class="pure-u-1 pure-u-md-1-1" style="padding-bottom:20px">
                          <label for="city">Message</label>
                          <textarea id="message" class="pure-u-23-24" type="text"></textarea>
                      </div>                     
                  </div>       
                  <button type="submit" class="button-xlarge pure-button pure-button-primary">Submit</button>
              </fieldset>
          </form>
      </div>
  </body>
</html>
